.data
bombs	DB 25 DUP(0)

.code

#make_BIN#

CALL start_matrix

start_matrix PROC
	MOV AH, 2CH
    	INT 21H
    	
	; Eq congruente (ant*2+1) mod 25
	MOV AL, 3 
	MOV BX, 2
	MUL BX
	ADD AX, 1
	MOV BX, 25
	DIV BX
	
	; mod = DL	
	
    	
	;MOV [bombs + SI], 1
	RET
start_matrix ENDP


show_table:
	MOV dh, 0
	l1:
	MOV dl, 0
		l2:
		mov  bh, 0    ;Display page
		mov  ah, 02h  ;SetCursorPosition
		int  10h
		
		mov  al, 'x'
		mov  bl, 0Ch  ;Color is red
		mov  bh, 0    ;Display page
		mov  ah, 0Eh  ;Teletype
		int  10h

		INC dl
		CMP dl, 5
		JL l2
	INC dh
	CMP dh, 5
	JL l1

HLT 